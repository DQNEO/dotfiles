# name,emailは.gitconfig.localに書く
# これはスパム対策のため。
#[user]
#        name  = DQNEO
#        email = hoge@example.com
[include]
        path = .gitconfig.local
[alias]
        a = add
	co = checkout
	ci = commit
        amend = commit --amend
	st = status
        b  = branch
	br = branch
	di = diff
        d  = diff
	brr = branch -r
	plf = pull --ff-only
	pi = cherry-pick
	cp = cherry-pick
	l = log --format='%C(auto)%h %Cgreen%cd%Creset %s'
        rp = rev-parse
        sp = show -p

        #http://blog.blindgaenger.net/advanced_git_aliases.html#show_all_defined_aliases
        alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\t=> \\2/' | sort
        dw = diff --color-words --word-diff-regex='\\w+|[^[:space:]]'
        diffw = diff --color-words --word-diff-regex='\\w+|[^[:space:]]'
        delete-merged-branch = !git branch --merged | grep -v '^\\*' | git branch -d
[push]
	default = current
[color]
	ui = auto
[core]
        # cygwinとLinuxで環境が異なるので、
        # pagerは.ginconfig.localにまかせる。
