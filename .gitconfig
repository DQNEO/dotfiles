[user]
        name  = DQNEO
        # emailは.gitconfig.localに書く
        # スパム対策のため。
[include]
        path = .gitconfig.local
[alias]
        grepi = grep -i
        a = add
	co = checkout
	ci = commit
        amend = commit --amend
	st = status
        b  = branch
	br = branch
	brr = branch -r
	di = diff
        d  = diff
	plf = pull --ff-only
	pi = cherry-pick
	cp = cherry-pick
	l = log --format='%C(auto)%h %Cgreen%cd%Creset %s'
        rp = rev-parse
        l2 = log --graph --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%an]%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
        la = !git l --all
        sp = show -p

        #http://blog.blindgaenger.net/advanced_git_aliases.html#show_all_defined_aliases
        alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\t=> \\2/' | sort
        dw = diff --color-words --word-diff-regex='\\w+|[^[:space:]]'
        dc = diff --cached
diffw = diff --color-words --word-diff-regex='\\w+|[^[:space:]]'
        delete-merged-branch = !git branch --merged | grep -v '^\\*' | xargs -n 1 git branch -d
[push]
	default = current
[color]
	ui = auto
[core]
        # cygwinとLinuxで環境が異なるので、
        # pagerは.ginconfig.localにまかせる。

[core]
  excludesfile = ~/.gitignore

[ghq]
  root = ~/src
