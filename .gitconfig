[user]
        name  = DQNEO
        # emailは.gitconfig.localに書く
        # スパム対策のため。
[include]
        # 環境ごとに異なる設定は、.ginconfig.localに書く。
        # 具体的には、OSXとLinuxとWindiwsでの違いとか。
        path = .gitconfig.local
[alias]
        # very convenient / used often

        alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1 => \\2/' | sort
        delete-merged-branch = !git branch --merged | grep -v '^\\*' | xargs -n 1 git branch -d

        st = status
        co = checkout
        cp = cherry-pick
        di = diff
        dw = diff --color-words --word-diff-regex='\\w+|[^[:space:]]'
        dc = diff --cached
        dwc = diff  --word-diff-regex='\\w+|[^[:space:]]' --cached
        dcw = diff  --word-diff-regex='\\w+|[^[:space:]]' --cached
        grepi = grep -i
        b  = branch
        br = branch
        sp = show -p
        amend = commit --amend
        ci = commit
        d  = diff
        a = add
        brr = branch -r

        # not used recently
        plf = pull --ff-only
        rp = rev-parse

        # will be removed
        l2 = log --graph --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%an]%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
        la = !git l --all

        mm = merge origin/master
        review = diff origin/master...
[push]
        default = current
[color]
        ui = auto
[core]
        excludesfile = ~/.gitignore

[ghq]
        root = ~/src
[rebase]
        autostash = true
[stash]
        showPatch = true
[diff]
	compactionHeuristic = true
[fetch]
	prune = true
