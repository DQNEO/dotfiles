# name,emailは.gitconfig.localに書く
#[user]
#        name  = DQNEO
#        email = hoge@example.com
[include]
        path = .gitconfig.local
[alias]
        a = add
	co = checkout
	ci = commit
        amend = commit --amend
	st = status
        b  = branch
	br = branch
	di = diff
        d  = diff
	brr = branch -r
	plf = pull --ff-only
	pi = cherry-pick
	cp = cherry-pick
	l = log --format='%C(auto)%h %Cgreen%cd%Creset %s'
        rp = rev-parse
        sp = show -p
[push]
	default = current
[color]
	ui = auto
[core]
        # cygwinではlvがちゃんと動かないので。
        # Linuxでは.gitconfig.localで下記のようにする。
	#pager = lv -c
